<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 24px;
            margin: 24px auto;
            max-width: 600px;
        }

        .mb {
            margin-bottom: 24px;
        }

        .back-to-home {
            background-color: #ffc107;
            color: #333;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .back-to-home:hover {
            background-color: #ffdb58;
        }

        .form-group {
            margin-bottom: 16px;
        }

        label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        textarea {
            resize: vertical;
        }

        .warning {
            color: red;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="mb">
            <a href="/" class="back-to-home">
                <i class="fa-solid fa-chevron-left"></i>
                Back to Home
            </a>
        </div>
        <div class="mb">
            <form id="myForm" action="/posts/add" method="POST">
                <div class="form-group">
                    <label for="title">Post Title:</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" required>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="Enter Description" required>
                </div>
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea class="form-control" id="content" name="content" placeholder="Write your Content" required></textarea>
                </div>
                <div id="warning-message" class="warning"></div>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
    </div>
</body>
</html>



<script>
  

    document.querySelector('form').addEventListener('submit', function(event) {
        var titleInput = document.getElementById('title');
        var descriptionInput = document.getElementById('description');
        var contentInput = document.getElementById('content');
        var warningMessage = document.getElementById('warning-message');

        if (titleInput.value === '' || descriptionInput.value === '' || contentInput.value === '') {
            event.preventDefault(); // Ngăn chặn việc submit form

            // Hiển thị cảnh báo
            warningMessage.textContent = 'Vui lòng nhập đầy đủ thông tin.';
        } else {
            // Đã nhập đầy đủ, tiến hành submit form
            // ...
            warningMessage.textContent = '';
            // Initialize CKEditor
            CKEDITOR.replace('content', {
                // Configuration options if needed
            });
        }
    });

   
</script>

