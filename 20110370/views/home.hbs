<style>
        /* Embedded CSS styles */
        /* Reset some default styles */
body, h1, h2, h3, p, ul, li, button {
    margin: 0;
    padding: 0;
}

/* Global styles */
body {
    font-family: Arial, sans-serif;
    background-color: #2af3e2;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

.title {
    color: #333;
    text-align: center;
    margin-top: 24px;
    font-size: 24px;
    font-weight: bold;
}

.btn-create {
    display: flex;
    justify-content: center;
    margin: 20px auto;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    background-color: #4CAF50;
    color: white;
    font-size: 18px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn-create:hover {
    background-color: #45a049;
}

/* List of posts */
.post-card {
    width: 50%;
    margin: 0 auto; /* Center horizontally */
    margin-bottom: 20px;
    background-color: white;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.card {
    border: none;
    width: 50%;
}

.card-body {
    padding: 20px;
}

.card-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 10px;
}

.card-description {
    color: #555;
    margin-bottom: 15px;
}

.button-group {
    display: flex;
    justify-content: flex-start;
}

.btn {
    margin-right: 10px;
    padding: 8px 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.btn-primary {
    background-color: #007BFF;
    color: white;
}

.btn-primary:hover {
    background-color: #0056b3;
}

.btn-info {
    background-color: #17A2B8;
    color: white;
}

.btn-info:hover {
    background-color: #117a8b;
}

.btn-danger {
    background-color: #DC3545;
    color: white;
}

.btn-danger:hover {
    background-color: #bd2d3b;
}

    </style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <!-- Include your chosen fonts and icon libraries here -->
    <title>{{title}}</title>
</head>
<body>
    <header>
        <h1 class="title">{{title}}</h1>
        <a href="/posts/create" class="btn-create">Create Post</a>
    </header>

    <div class="list-group">
        {{#if data.length}}
        {{#each data}}
        <div class="post-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">{{this.title}}</h2>
                    <p class="card-description">{{ this.description }}</p>
                    <div class="button-group">
                        <a href="/posts/{{ this.id }}" class="btn btn-primary">View details</a>
                        <a href="/posts/{{ this.id }}/edit" class="btn btn-info">Edit Post</a>
                        <button class="btn btn-danger delete-post" data-id="{{ this.id }}">Delete Post</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else }}
        <h1>No posts available at the moment.</h1>
        {{/if }}
    </div>

    <!-- Delete confirmation modal -->
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <!-- Modal content here -->
    </div>

    <script src="script.js"></script>
</body>
</html>


<script>
    var id;
    var deleteForm = document.forms['delete-form'];
    var btnDelete = document.getElementById('confirm-delete');

    $('#delete-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        id = button.data('id');
    })

    btnDelete.onclick = function () {
        deleteForm.action = '/posts/'+id+'/delete?_method=DELETE';
        deleteForm.submit();
    }
</script>